<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Avalia CETESB"
        android:textColor="@color/secondary"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nomePraia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="45dp"
        android:hint="Nome da Praia"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/nomeCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomePraia"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:hint="Cidade"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/nomeEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeCidade"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:hint="Estado"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnIncluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incluir"
        android:layout_below="@+id/nomeEstado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIncluir"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>
</RelativeLayout>